@model WebApp_Tickets.Models.Afiliado
@{
    ViewData["Title"] = "Cargar Afiliado Manualmente";
}

<h2>Cargar Afiliado Manualmente</h2>

<form asp-action="CargarManualmente" method="post">
    <div class="form-group">
        <label asp-for="Apellido">Apellido</label>
        <input asp-for="Apellido" class="form-control" required />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombres">Nombres</label>
        <input asp-for="Nombres" class="form-control" required />
        <span asp-validation-for="Nombres" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DNI">DNI</label>
        <input asp-for="DNI" class="form-control" required />
        <span asp-validation-for="DNI" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" required />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Foto">Foto (opcional)</label>
        <input asp-for="Foto" type="file" class="form-control" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
