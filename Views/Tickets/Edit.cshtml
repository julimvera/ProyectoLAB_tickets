@model WebApp_Tickets.Models.Ticket

@if (TempData["ErrorMessage"] != null)

{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Editar Ticket</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="AfiliadoId" class="control-label">Afiliado</label>
        <select asp-for="AfiliadoId" class="form-control" asp-items="ViewBag.AfiliadoId"></select>
    </div>

    <div class="form-group">
        <label asp-for="FechaSolicitud" class="control-label">Fecha de Solicitud</label>
        <input asp-for="FechaSolicitud" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Observacion" class="control-label">Observación</label>
        <textarea asp-for="Observacion" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="EstadoId" class="control-label">Estado</label>
        <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>